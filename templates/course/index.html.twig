{% extends 'template.html.twig' %}
{% block titleNav %} {{ 'Course' }} {%  endblock %}
{% block title %} Home | {{ parent() }} {% endblock %}
{% block main %}
    <div class="container">
        <div class="row">
            <div class="offset-3 col-6">
                <h1> Liste de courses</h1>
                <br>
                <div class="row">
                    <div class="col-6">
                        <input id="item" class="form-control" >
                    </div>
                    <div class="col-2">
                        <button id="btn1" class="btn btn-success">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <br>
                <table  class="table table-striped">
                    <thead>
                    <th>Item</th>
                    <th>Action</th>
                    </thead>
                    <tbody id="tab1">
                    {% for c in courses %}
                        {% if c.status %}
                            <tr>
                                <td>{{ c.title }}</td>
                            </tr>
                            {% else %}
                            <tr class="table-danger">
                                <td><strike>{{ c.title }}</strike></td>
                            <tr>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}